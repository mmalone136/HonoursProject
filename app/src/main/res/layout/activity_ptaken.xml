<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.mmalo.prototype2.PTakenActivity">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="262dp"

        android:id="@+id/imageTaken"
        android:padding = "10sp"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/image_back"/>



    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSubmit"
        android:onClick="submitForm"

        android:layout_below="@+id/textComments"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/buttonDR"
        android:layout_toEndOf="@+id/buttonDR"
        android:visibility="invisible"/>









    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Type Comments"
        android:onClick="clearTextBox"
        android:ems="10"
        android:id="@+id/textComments"
        android:minHeight="100dp"
        android:layout_below="@+id/imageTaken"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"/>

    <Button
        android:text="Dinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textComments"
        android:layout_alignRight="@+id/buttonBreak"
        android:layout_alignEnd="@+id/buttonBreak"
        android:id="@+id/buttonDin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="Dinner"
        android:onClick="mealButton"
        />

    <Button
        android:text="Snack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/buttonLunch"
        android:layout_alignStart="@+id/buttonLunch"
        android:id="@+id/buttonSnack"
        android:layout_below="@+id/textComments"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:tag="Snack"
        android:onClick="mealButton"
        />

    <Button
        android:text="Breakfast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBreak"
        android:layout_below="@+id/imageTaken"
        android:layout_toLeftOf="@+id/buttonSubmit"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_above="@+id/buttonDin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:tag="Breakfast"
        android:onClick="mealButton"
        />

    <Button
        android:text="Lunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonLunch"
        android:layout_below="@+id/imageTaken"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonSnack"
        android:layout_toEndOf="@+id/buttonDin"
        android:layout_toRightOf="@+id/buttonDin"
        android:tag="Lunch"
        android:onClick="mealButton"
        />



    <Button
        android:text="Add To Fruit and Veg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonFV"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonDR"
        android:onClick="addToCounts"
        android:tag="FV"
        android:layout_below="@+id/textComments"
        android:layout_toLeftOf="@+id/buttonDR"
        android:visibility="invisible"
        />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTaken"
        android:layout_toLeftOf="@+id/buttonLunch"
        android:layout_toStartOf="@+id/buttonLunch"
        android:id="@+id/buttonMinus"
        android:visibility="invisible"
        android:onClick="decCount"
        />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonMinus"
        android:layout_toRightOf="@+id/buttonFood"
        android:layout_toEndOf="@+id/buttonFood"
        android:id="@+id/buttonAdd"
        android:visibility="invisible"
        android:onClick="incCount"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textComments"
        android:id="@+id/textViewCount"
        android:layout_alignRight="@+id/buttonAdd"
        android:layout_alignEnd="@+id/buttonAdd"
        android:layout_alignLeft="@+id/buttonMinus"
        android:layout_alignStart="@+id/buttonMinus"
        android:layout_alignParentTop="true"
        android:textSize="200dp"
        android:textAlignment="center"
        android:visibility="invisible"
        android:background="@drawable/background"
        android:textColor="#FFFFFF"
        />

    <Button
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonMinus"
        android:id="@+id/buttonCountConfirm"
        android:onClick="saveCount"
        android:layout_alignLeft="@+id/buttonMinus"
        android:layout_alignStart="@+id/buttonMinus"
        android:layout_alignRight="@+id/buttonAdd"
        android:layout_alignEnd="@+id/buttonAdd"
        android:visibility="invisible"/>

    <Button
        android:text="DRINK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDrink"
        android:onClick="doDrink"
        android:tag="Drink"

        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageTaken"
        android:layout_toRightOf="@+id/buttonDin"
        android:layout_toEndOf="@+id/buttonDin" />


    <Button
        android:text="FOOD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTaken"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/buttonFood"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/buttonSnack"
        android:layout_toStartOf="@+id/buttonSnack"
        android:onClick="doFood"
        />

    <Button
        android:text="ADD TO DRINKS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDR"
        android:onClick="addToCounts"
        android:tag="Drink"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textComments"
        android:visibility="invisible"/>


</RelativeLayout>