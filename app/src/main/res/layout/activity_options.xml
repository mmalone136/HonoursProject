<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.mmalo.prototype2.OptionsActivity">

    <Button
        android:text="Take Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPhoto"
        android:layout_weight="0.09"
        android:elevation="0dp"
        android:onClick="openPhotoPreview"
        />

    <Button
        android:text="View Diary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSummary"
        android:layout_weight="0.09"
        android:onClick="viewDates"
        />

    <Button
        android:text="View Guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGuide"
        android:layout_weight="0.09"
        android:onClick = "viewGuide"
        />


    <Button
        android:text="Tutorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTut"
        android:layout_weight="0.09"
        android:onClick="loadTutorial"/>

    <TextView
        android:text="TextViewFV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewFV"
        android:layout_weight="0.09" />


    <TextView
        android:text="TextViewDR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewDrinks"
        android:layout_weight="0.09" />

    <TextView
        android:text="TextViewB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBreak"
        android:layout_weight="0.09" />

    <TextView
        android:text="TextViewL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLunch"
        android:layout_weight="0.09" />

    <TextView
        android:text="TextViewD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDinn"
        android:layout_weight="0.09" />


</LinearLayout>